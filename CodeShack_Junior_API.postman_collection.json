            "name": "Auth & Users",
            "item": [
                {
                    "name": "Register Junior",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"token\", jsonData.token);",
                                    "    if (jsonData.data.role === 'junior') pm.environment.set(\"juniorToken\", jsonData.token);",
                                    "    if (jsonData.data.role === 'mentor') pm.environment.set(\"mentorToken\", jsonData.token);",
                                    "    if (jsonData.data.role === 'admin') pm.environment.set(\"adminToken\", jsonData.token);",
                                    "    if (jsonData.data.userId) pm.environment.set(\"userId\", jsonData.data.userId);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Junior\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"role\": \"junior\",\n    \"bio\": \"Aspiring developer\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "users",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
